.pagewarp
  nav(id="nav")
    ul(class="n-ull")
      div(class="n-btn-wrap")
        li(id="n-item4" class="n-li")
          button(style="" id="n-back" class="btn n-back") К Таблице
      div(class="n-btn-wrap")
        li(id="n-item8" class="n-li")
          button(type="button" id="n-search" class="btn btn-light logout") Выход

  article(id="article")
    .usersList
      .dropDownBtn
        button(type="button" id="userlist-btn" class="userlist-btn drp-btn")
          span(id="dropbtnName") Все сотрудники
          span(class=".arrow") 
            i(class="fas fa-sort-down")
            i(class="fas fa-sort-up")
        input(type="text" id="user-filter" class="form-control" placeholder="Поиск по сотрудникам")
        .list
          #preloader-userlist.mini-preloader
            include ../mini-preloader.html
          ul(class="list-ul users-ul")
            li(class="item-add")
              span(class="text-item" id="addUser") <i class="fas fa-plus"></i> Добавить пользователя
          .editer
            .close-warp
              .close-btn
                i(class="fas fa-times")
            .input-warper
              .userfio
                h4.block-header ФИО
                .input-cell
                  label(for="lastname-inp" class="lastname-lab") Фамилия
                  input(type="text" id="lastname-inp" name="lastname-inp" class="data-inp form-control" value="Иванов")
                .input-cell
                  label(for="firstname-inp" class="firstname-lab") Имя
                  input(type="text" id="firstname-inp" name="firstname-inp" class="data-inp form-control" value="Иван")
                .input-cell
                  label(for="middlename-inp" class="middlename-lab") Отчество
                  input(type="text" id="middle-inp" name="middlename-inp" class="data-inp form-control" value="Иванович")
              .duty-info
                h4.block-header Должность
                .input-cell
                  label(for="duty-inp" class="duty-lab") Назначить должность
                  input(type="text" id="duty-inp" name="duty-inp" class="data-inp form-control" value="Должность")
            .input-warper
              .service-info
                h4.block-header Сервис
                .input-cell
                  #preloader-service.mini-preloader
                    include ../mini-preloader.html
                  label(for="service-inp" class="service-lab") Назначить сервис
                  select(name="service-inp" id="service-inp" class="form-control data-inp")
              .depart-info
                h4.block-header Отдел
                .input-cell
                  #preloader-depart.mini-preloader
                    include ../mini-preloader.html
                  label(for="depart-inp" class="depart-lab") Назначить отдел
                  select(name="depart-inp" id="depart-inp" class="form-control data-inp")
            .input-warper
              .view-permissions
                h4.block-header Права просмотра
                .input-cell
                  #preloader-service-perm.mini-preloader
                    include ../mini-preloader.html
                  label(for="service-inp" class="service-lab") Выбор сервисов и служб
                  select(name="service-inp" id="service-perm-inp" class="form-control data-inp")
                .input-cell(class="choose-depart-block")
                  #preloader-depart-perm.mini-preloader
                    include ../mini-preloader.html
                  ul(class="choose-depart-list")
              .rw-permission
                h4.block-header Права редактирования
                .input-cell
                  label(for="rwPerm-inp" class="rwPerm-lab") Редактирование
                  select(name="rwPerm-inp" id="rwPerm-inp" class="form-control data-inp")
                    option(value="1") Да
                    option(value="0") Нет
                //- .input-cell
                //-   label(for="permissionInfo" class="perInfo-lab") Документация по разгранечению прав
                //-   button(type="button" id="permissionInfo" class="btn btn-primary") Открыть
            .input-warper
              .username-login
                h4.block-header Логин
                .input-cell
                  label(for="username-inp" class="username-lab") Изменить логин
                  input(type="text" id="username-inp" name="username-inp" class="data-inp form-control" value="Username")
              .username-password
                h4.block-header Пароль
                .input-cell
                  label(for="password-inp" class="password-lab") Изменить пароль
                  input(type="password" id="password-inp" name="password-inp" class="data-inp form-control" value="password")
            .button-warper
              button(type="button" id="saveUserSettings" class="btn btn-success") Сохранить изменения
              button(type="button" id="deleteUser-btn" class="btn btn-danger") Удалить пользователя
              button(type="button" id="addUser-btn" class="btn btn-warning") Добавить пользователя
    .serviceList
      .dropDownBtn
        button(type="button" id="serviceList-btn" class="serviceList-btn drp-btn")
          span(id="dropbtnName") Все сервисы
          span(class=".arrow") 
            i(class="fas fa-sort-down")
            i(class="fas fa-sort-up")
        input(type="text" id="service-filter" class="form-control" placeholder="Поиск по сервисам")
        .list
          #preloader-servicelist.mini-preloader
            include ../mini-preloader.html
          ul(class="list-ul service-ul")
            li(class="item-add-service")
              span(class="text-item" id="addService") <i class="fas fa-plus"></i> Добавить сервис
          .service-editer
            .close-warp
              .close-btn
                i(class="fas fa-times")
            .departs-control-panel
              ul.departs-control-list
                li.add-depart-item
                  button(type="button" class="add-depart btn btn-warning" id="add-depart") Добавить службу
            .departs-list-warp
              ul.departs-list


      
      